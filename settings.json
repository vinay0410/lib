{
    "window.zoomLevel": 0,
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.lineHeight": 1.08,
    "terminal.integrated.cursorBlinking": true,
    "code-runner.executorMap": {
        "cpp": "g++ -std=c++14 -Wshadow -Wall -Wl,-stack_size -Wl,10000000 -g -fsanitize=address -fsanitize=undefined -D_GLIBCXX_DEBUG -DLOCAL $fullFileName && ./a.out"
    },
    "code-runner.customCommand": "g++ -std=c++14 -Wshadow -Wall -Wl,-stack_size -Wl,10000000 -g -fsanitize=address -fsanitize=undefined -D_GLIBCXX_DEBUG -DLOCAL $fullFileName",
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "workbench.colorTheme": "Monokai",
    "vim.insertModeKeyBindings": [
        {
          "before": [";", "j"],
          "after": ["<Esc>"]
        }
    ],
    "keyboard.dispatch": "keyCode",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before":["<CR>"],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before":["leader", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before":["leader", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": [";", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": ["leader", "t"],
            "commands": ["workbench.action.terminal.toggleTerminal"]
        },
        {
            "before": ["leader", "r"],
            "commands": ["code-runner.run"]
        },
        {
            "before": ["leader", "c"],
            "commands": ["code-runner.runCustomCommand"]
        },
        {
            "before" : ["u"],
            "commands" : [
                "undo"
            ]
        },
        {
            "before" : ["<C-r>"],
            "commands" : [
                "redo"
            ]
        }
    ],
    "vim.leader": "<space>"
}